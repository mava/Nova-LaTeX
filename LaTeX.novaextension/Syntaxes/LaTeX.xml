<?xml version="1.0" encoding="UTF-8"?>
<syntax name="latex">
    <meta>
        <name>LaTeX</name>
        <type>markup</type>
        <preferred-file-extension>tex</preferred-file-extension>
    </meta>
    
    <detectors>
        <extension priority="1.0">tex</extension>
        <extension priority="0.9">ltx,sty,cls,clo,bbx,cbx,dbx,tikz</extension>
        <match-content lines="3" priority="0.5">^\\documentclass</match-content>
    </detectors>
    
    <comments>
        <single>
            <expression>%</expression>
        </single>
    </comments>
        
    <tree-sitter>
        <highlights path="latex/highlights.scm" />
        <injections path="latex/injections.scm" />
        <folds path="latex/folds.scm" />
        <symbols path="latex/symbols.scm" />
        <tag-matching path="latex/tagMatching.scm" />
        <text-checking path="latex/textChecking.scm" />
    </tree-sitter>
</syntax>
